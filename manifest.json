{
    "name": "Enhanced Youtube Mode",
	"short_name": "Youtube Popout",
    "manifest_version": 2,
	"version":"2.0.0.2",
    "description": "This extension adds the fitting mode to YouTube player to make it more amazing.",
    "browser_action": {
		"default_icon": "48.png",
		"default_title": "Toggle YouTube Mode on Player"
	},
	"background":{
		"scripts":["background.js"],
		"persistent": false
	},
	"content_scripts":[
	{
		"matches": [ "*://*.youtube.com/watch*" ],
		"js":["content.js"],
		 "css": ["app_player.css"],
		"run_at": "document_end"
	}
	],
	"permissions": [
		"tabs",
        "activeTab",
        "storage",
        "<all_urls>"
	],
	"icons": {"48": "48.png",
			"16": "16.png",
			"128": "128.png"},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}